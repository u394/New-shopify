  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{% endfor %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<!-- Add your custom CSS here -->

<style>
.custom-featured{
display:flex;
flex-wrap: wrap;
}
.custom-featured .custom-featured-wrap{
padding: 10px;
width: 25%;
}  
.custom-center-slider-wrapper{
    display: none;
}
.custom-center-slider-wrapper.active{
    display: block;
}
.product-full-width{
  max-width: none;
}
</style>



<div class="color-{{ section.settings.color_scheme }} isolate gradient">
<div class="collection section-{{ section.id }}-padding">
<div class="page-width {% if section.settings.full_width %}product-full-width{% endif %}">

<div class="collection__title title-wrapper title-wrapper--no-top-margin">
{%- if section.settings.title != blank -%}
  <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ section.settings.title }}
  </h2>
{%- endif -%}
{%- if section.settings.description != blank
  or section.settings.show_description
  and section.settings.collection.description != empty
-%}
  <div class="collection__description {{ section.settings.description_style }} rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- if section.settings.show_description -%}
      {{ section.settings.collection.description }}
    {%- else -%}
      {{ section.settings.description -}}
    {%- endif %}
  </div>
{%- endif -%}
</div>


<!-- ------------------------------   Button Code  --------------------------------- -->

<div class="custom-button center collection__view-all collection__title title-wrapper">
   {%- for block in section.blocks -%}
    <a class="custom-slider-button button button-{{ block.settings.collection.title }}" data-content="slider{{ forloop.index }}">{{ block.settings.collection.title }}</a>
   {% endfor %}
</div>

<!-- ------------------------------   Button Code  --------------------------------- -->


{%- for block in section.blocks -%}

 {%- liquid
    assign products_to_display = block.settings.collection.all_products_count
    if block.settings.collection.all_products_count > block.settings.products_to_show
    assign more_in_collection = true
    endif
    
    assign show_desktop_slider = false
    if block.settings.enable_desktop_slider and products_to_display > block.settings.columns_desktop
    assign show_desktop_slider = true
    endif
-%}  
  

<!-- ------------------------------   First Row Code  --------------------------------- -->
  
<div class="custom-slider-container">
    <div class="custom-center-slider-wrapper">
        <div class="{% if section.settings.enable_desktop_slider%}custom-center-slider{% endif %} custom-featured grid--{{ block.settings.columns_desktop }}-col-desktop" id="slider{{ forloop.index }}">
        {%- for product in block.settings.collection.products limit: block.settings.products_to_show -%}
            <div class="custom-featured-wrap">
              {% render 'card-product',
                  card_product: product,
                  media_aspect_ratio: block.settings.image_ratio,
                  image_shape: block.settings.image_shape,
                  show_secondary_image: block.settings.show_secondary_image,
                  show_vendor: block.settings.show_vendor,
                  show_rating: block.settings.show_rating,
                  show_quick_add: block.settings.enable_quick_add,
                  section_id: section.id
              %}
            </div>
        {%- else -%}
                 {%- for i in (1..4) -%}
                   <div class="custom-featured-wrap">
                 {%- assign placeholder_image = 'product-apparel-' | append: forloop.rindex -%}
                  {% render 'card-product',
                    show_vendor: block.settings.show_vendor,
                    placeholder_image: placeholder_image
                  %}
                   </div>
         {%- endfor -%}
         {%- endfor -%}
        </div>


<!-- ------------------------------   View All Button Code  --------------------------------- -->      
      
<div class="custom-button-container">

{%- if block.settings.show_view_all and more_in_collection -%}
  <div class="center collection__view-all{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <a
      href="{{ block.settings.collection.url }}"
      class="{% if block.settings.view_all_style == 'link' %}link underlined-link{% elsif block.settings.view_all_style == 'solid' %}button{% else %}button button--secondary{% endif %}"
      aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: block.settings.collection.title }}"
    >
      {{ 'sections.featured_collection.view_all' | t }}
    </a>
  </div>
{%- endif -%}

{% if block.settings.image_shape == 'arch' %}
{% render 'mask-arch' %}
{%- endif -%}
</div>

<!-- ------------------------------   View All Button Code  --------------------------------- -->
      
</div>
</div>

<!-- ------------------------------   First Row Code  --------------------------------- -->


{% endfor %}  
</div>
</div>
</div>  

<script>
    $(document).ready(function() {
        $(".custom-center-slider-wrapper:first").addClass("active");
        // Initialize the Slick slider with the default content
        $('.custom-center-slider').slick({
        slidesToShow: 4,
        slidesToScroll: 1,
        // centerMode: true,
        arrows: true,
        dots: false,
        speed: 300,
        centerPadding: '0px',
        infinite: true,
        autoplaySpeed: 3000,
        autoplay: true,
        nextArrow: '.slick-next_2 ',
        prevArrow: '.slick-prev_2',
        prevArrow: '<i class="fas fa-angle-left slick-arrow start-0 slick-prev_2"></i>',
        nextArrow: '<i class="fas fa-angle-right slick-arrow end-0 slick-next_2" ></i>',
        responsive: [
            // {
            //     breakpoint: 991,
            //     settings: {
            //         arrows: false,
            //         // centerMode: true,
            //         // centerPadding: '40px',
            //         slidesToShow: 3,
            //         slidesToScroll: 1
            //     }
            // },
            {
                breakpoint: 1200,
                settings: {
                    arrows: true,
                    centerMode: true,
                    centerPadding: '0px',
                    slidesToShow: 5,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 991,
                settings: {
                    arrows: true,
                    // centerMode: true,
                    // centerPadding: '40px',
                    slidesToShow: 3,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 576,
                settings: {
                    arrows: true,
                    // centerMode: true,
                    // centerPadding: '40px',
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 300,
                settings: {
                    arrows: true,
                    // centerMode: true,
                    // centerPadding: '10px',
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            }

        ]
    });

        $(".custom-slider-button").click(function(e) {
            e.preventDefault();
            var targetContent = $(this).data("content");

            // Remove Slick slider functionality
            $('.custom-center-slider').slick("unslick");

            // Hide all center-slider wrappers
            $(".custom-center-slider-wrapper").hide();

            // Show the selected content
            $("#" + targetContent).parent().show();

          
          {% if section.settings.enable_desktop_slider%}
            
            // Reinitialize the Slick slider for the selected content
            $("#" + targetContent).slick({
              
              slidesToShow: 4,
              slidesToScroll: 1,
              // centerMode: true,
              arrows: true,
              dots: false,
              speed: 300,
              centerPadding: '0px',
              infinite: true,
              autoplaySpeed: 3000,
              autoplay: true,
              nextArrow: '.slick-next_2 ',
              prevArrow: '.slick-prev_2',
              prevArrow: '<i class="fas fa-angle-left slick-arrow start-0 slick-prev_2"></i>',
              nextArrow: '<i class="fas fa-angle-right slick-arrow end-0 slick-next_2" ></i>',
              responsive: [
                  // {
                  //     breakpoint: 991,
                  //     settings: {
                  //         arrows: false,
                  //         // centerMode: true,
                  //         // centerPadding: '40px',
                  //         slidesToShow: 3,
                  //         slidesToScroll: 1
                  //     }
                  // },
                  {
                      breakpoint: 1200,
                      settings: {
                          arrows: true,
                          centerMode: true,
                          centerPadding: '0px',
                          slidesToShow: 5,
                          slidesToScroll: 1
                      }
                  },
                  {
                      breakpoint: 991,
                      settings: {
                          arrows: true,
                          // centerMode: true,
                          // centerPadding: '40px',
                          slidesToShow: 3,
                          slidesToScroll: 1
                      }
                  },
                  {
                      breakpoint: 576,
                      settings: {
                          arrows: true,
                          // centerMode: true,
                          // centerPadding: '40px',
                          slidesToShow: 1,
                          slidesToScroll: 1
                      }
                  },
                  {
                      breakpoint: 300,
                      settings: {
                          arrows: true,
                          // centerMode: true,
                          // centerPadding: '10px',
                          slidesToShow: 1,
                          slidesToScroll: 1
                      }
                  }
          
              ]
          });

          {% endif %}

            // Add class 'active' to the selected button and remove it from others
            $(".custom-slider-button").removeClass("active");
            $(this).addClass("active");
        });

        // Initially, activate the first button
        $(".custom-slider-button[data-content='slider1']").addClass("active");
    });
</script>

